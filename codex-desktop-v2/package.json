{
    "name": "codex-desktop-v2",
    "productName": "Codex-IA Desktop",
    "version": "2.0.0",
    "description": "The ascended AI Code Editor powered by PythonJet",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "vite",
        "build": "vite build",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.codexia.desktop",
        "productName": "Codex-IA",
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "backend/**/*",
            "codex_ia/**/*"
        ],
        "extraResources": [
            "./backend/**",
            {
                "from": "public/vs",
                "to": "vs"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        }
    },
    "keywords": [
        "electron",
        "react",
        "codex-ia"
    ],
    "author": "PythonJet Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.0",
        "@vitejs/plugin-react": "^4.2.0"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "lucide-react": "^0.300.0",
        "monaco-editor": "^0.45.0",
        "@monaco-editor/react": "^4.6.0",
        "clsx": "^2.1.0",
        "tailwind-merge": "^2.2.0"
    }
}